{
    "extends": [
        "config:base"
    ],
    "pre-commit": {
        "enabled": true
    },
    "automerge": true,
    "automergeType": "pr",
    "automergeStrategy": "squash",
    "dependencyDashboard": true,
    "dependencyDashboardAutoclose": true,
    "separateMultipleMajor": true,
    "minor": {
        "automerge": true,
        "stabilityDays": 3,
        "prCreation": "not-pending"
    },
    "patch": {
        "automerge": true,
        "stabilityDays": 0
    },
    "major": {
        "automerge": true,
        "stabilityDays": 9
    },
    "digest": {
        "automerge": true
    },
    "transitiveRemediation": true,
    "schedule": [
        "after 8pm every weekday",
        "before 8am every weekday",
        "every weekend"
    ],
    "timezone": "America/Chicago",
    "labels": [
        "renovate"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "docker"
            ],
            "matchPackagePatterns": [
                ".*"
            ],
            "groupName": "Docker base images",
            "schedule": [
                "after 8pm every weekend"
            ]
        },
        {
            "matchDatasources": [
                "apt"
            ],
            "matchPackagePatterns": [
                ".*"
            ],
            "groupName": "APT Security Updates",
            "schedule": [
                "after 8pm every day"
            ],
            "stabilityDays": 3,
            "matchUpdateTypes": [
                "security"
            ]
        },
        {
            "matchDatasources": [
                "npm"
            ],
            "matchPackageNames": [
                "@security-alert/sarif-to-comment"
            ],
            "groupName": "NPM Security Patches",
            "schedule": [
                "after 8pm every weekend"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor",
                "security"
            ]
        },
        {
          "matchPackageNames": ["zricethezav/gitleaks"],
          "allowedVersions": "<=8.21.2"
        }
    ]
}
